/* pages/details/index.wxss */
.content {
  background-color: #F0F0F0;
}

.content_head {
  background-color: #fff;
  border-radius: 5px;
}

.head_img {
  display: flex;
  justify-content: center;
}

.content_info {
  display: flex;
  justify-content: space-between;
}

.info_jp {
  font-size: 14px;
  padding-left: 5px;
}
.info_tj {
  font-size: 13px;
  padding: 15px 0 0 10px;
}

.info_sl {
  color: rgb(145, 145, 145);
  padding-left: 5px;

}

.item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #E95751;
  border-radius: 2px;
}

.explain {
  margin-top: 10px;
  background-color: #FEF7E5;
  padding-left: 10px;
}

.explain_text {
  color: #BBA486;
}

.sd {
  background-color: #FEF7E5;
}

.explain_info {
  color: #706551; 
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom:10px;
}

.explain_xq {
  font-size: 19px;
  font-weight: 500;
}
.explain_but {
  padding-right: 12px;
}

.circular_content {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 240px;
}

.circular {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  overflow:hidden;
  background-color: #E95751;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
}

.circular_text {
  text-align: center;
}

.info_background {
  background-color: #fff;
}

.info_img {
  width: 90%;
  margin: 10px auto;
  padding-top: 10px;
}

.info_imge {
  width: 100%;
}

.button {
  position: fixed;
  bottom:0;
  width: 100vw;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 80px;
}
